@page
@model BadAssDogTreats_Website.Pages.BackEnd.ToDos.CompletionModel

@{
    ViewData["Title"] = "Completion";
}

<div class="btn-back">
    <a asp-page="./Index">
        <img src="~/Images/back_button_img.png" width="25" height="25" />
    </a>
</div>

<h1>Task Completion</h1>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.ToDo?.Id">Edit</a>
    </div>
<hr/>
<div class="flex-container">
<div style="details-container">

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDo.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDo.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDo.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDo.Details)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDo.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDo.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDo.Cost)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.ToDo.Cost) 
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDo.Completed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDo.Completed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDo.CompletionNotes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDo.CompletionNotes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDo.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDo.DueDate)
        </dd>
    </dl>
</div>
<div class="details-right">
    <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="ToDo.Id" />
    <div class="form-group">
        <label asp-for="ToDo.CompletionNotes" class="control-label"></label>
        <textarea style="min-height:50px; height:100px;" asp-for="ToDo.CompletionNotes" class="form-control"></textarea>
        <span asp-validation-for="ToDo.CompletionNotes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Complete" class="btn btn-primary"/>
    </div>
    </form>
</div>

</div>

