@page
@model BadAssDogTreats_Website.Pages.BackEnd.Store.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>StoreItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StoreItem.Name" class="control-label"></label>
                <input asp-for="StoreItem.Name" class="form-control" />
                <span asp-validation-for="StoreItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.Description" class="control-label"></label>
                <textarea asp-for="StoreItem.Description" class="form-control"></textarea>
                <span asp-validation-for="StoreItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.Price" class="control-label"></label>
                <input asp-for="StoreItem.Price" class="form-control" />
                <span asp-validation-for="StoreItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.Discount" class="control-label"></label>
                <input asp-for="StoreItem.Discount" class="form-control" />
                <span asp-validation-for="StoreItem.Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoreItem.Weight" class="control-label"></label>
                <input asp-for="StoreItem.Weight" class="form-control" />
                <span asp-validation-for="StoreItem.Weight" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StoreItem.Image" class="control-label"></label>
                <input asp-for="Image1" type="file" name="imageUploads"/>
                <span asp-validation-for="StoreItem.Image" class="text-danger"></span>                
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
